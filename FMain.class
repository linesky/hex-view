Public Sub Form_Open()
Dim f1 As File
f1 = Open "/tmp/hex.txt" For Create 
Close f1
f1.Save("/tmp/hex.txt", "")
  TextArea1.Text = ""

End

Public Sub Button1_Click()
Dim f1 As File
Dim a As String 
Dim aa As String 
f1 = Open "/tmp/hex.txt" For Create 
Close f1
  Shell "xxd " & TextBox4.Text & " > /tmp/hex.txt "
  Sleep 1
  f1 = Open "/tmp/hex.txt" For Input
  aa = ""
  While 1
    Line Input #f1, a
    aa = aa & "\n" & a
    If Eof(f1) Then Break
  Wend
  Close #f1
  TextArea1.Text = aa
  TextArea1.refresh()
  
End


